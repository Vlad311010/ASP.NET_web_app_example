@page "/HeroesShop/Add"
@model app.Pages.Authenticated.HeroesShop.AddHeroModel

@{
    ViewData["Title"] = "AddHero";
}

<h1>AddHero</h1>

<h4>Hero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Hero.Name" class="control-label"></label>
                <input asp-for="Hero.Name" class="form-control" />
                <span asp-validation-for="Hero.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hero.Class" class="control-label"></label>
                <select asp-for="Hero.Class" class="form-control" asp-items="Html.GetEnumSelectList<HeroClass>()"></select>
                <span asp-validation-for="Hero.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hero.MaxHP" class="control-label"></label>
                <input asp-for="Hero.MaxHP" class="form-control" />
                <span asp-validation-for="Hero.MaxHP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hero.MaxMP" class="control-label"></label>
                <input asp-for="Hero.MaxMP" class="form-control" />
                <span asp-validation-for="Hero.MaxMP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./HeroesShop">Back to List</a>
</div>

